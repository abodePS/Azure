{
    "mode": "indexed",
    "policyRule": {
        "if": {
            "allOf": [{
                    "field": "type",
                    "equals": "Microsoft.Compute/disks"
                },
                {
                    "field": "Microsoft.Compute/disks/diskState",
                    "equals": "Unattached"
                },
                {
                    "field": "name",
                    "notLike": "*-ASRReplica"
                }
            ]
        },
        "then": {
            "effect": "audit"
        }
    }
}
