{
   "properties": {
      "displayName": "Audit SoftDelete & PurgeProtection enabled for KeyVault",
      "description": "Audits Key Vault vaults if they do not have SoftDelete or PurgeProtection enabled",
      "mode": "Indexed",
      "parameters": {},
      "policyRule": {
		"if": {
			"allOf": [
			  {
				"field": "type",
				"equals": "Microsoft.KeyVault/vaults"
			  }
			]
		  },
		  "then": {
			"effect": "auditIfNotExists",
			"details": {
			  "type": "Microsoft.KeyVault/vaults",
			  "existenceCondition": {
				"allOf": [
				  {
					"field": "Microsoft.KeyVault/vaults/enableSoftDelete",
					"equals": "true"
				  },
				  {
					"field": "Microsoft.KeyVault/vaults/enablePurgeProtection",
					"equals": "true"
				  }
				]
			  }
			}
		  }
      }
   }
}
